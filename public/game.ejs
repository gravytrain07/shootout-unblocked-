            <div id = "game">
                
                <div id = "ready-modal">
                    <p>Welcome, contestant! Are you ready?</p>
                    <button id = "ready-up">Ready</button>

                </div>


                <div id = "screen-wrapper">

                    <div id = "canvas-wrapper">
                        <canvas id = "canvas" width = "400" height="300"></canvas>
                    </div>

                    <div id = "info-panel-wrapper">

                        <div id = "powerup-timer">
                            <span id = "invisibility-time-left"></span>
